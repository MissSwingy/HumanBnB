<%= render "devise/shared/banner_form" %>
<section id="aa-signin">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="aa-signin-area">
          <div class="aa-signin-form">
            <div class="aa-signin-form-title">
                <%= link_to 'HumanBnB', root_path, class: 'aa-property-home' %>
                    <h2>Sign up</h2>
            </div>
                    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= f.error_notification %>

                      <div class="form-inputs contactform">
                        <%= f.input :first_name,
                                    required: true,
                                    autofocus: true,
                                    input_html: { autocomplete: "first_name" },
                                    placeholder: "Prénom", class: 'aa-single-field'%>
                        <%= f.input :last_name,
                                    required: true,
                                    autofocus: true,
                                    input_html: { autocomplete: "Nom" },
                                    placeholder: "Nom", class: 'aa-single-field'%>
                        <%= f.input :gender,
                                    required: true,
                                    autofocus: true,
                                    input_html: { autocomplete: "Genre" },
                                    placeholder: "Genre", class: "required dropdown-menu", collection: ["Feminin", "Masculin", "Je prefère ne pas l'indiquer"] %>
                        <%= f.input :age,
                                    required: true,
                                    autofocus: true,
                                    input_html: { autocomplete: "Age" },
                                    placeholder: "age", class: 'aa-single-field'%>
                         <%= f.input :skills,
                                    required: true,
                                    autofocus: true,
                                    input_html: { autocomplete: "Qualités" },
                                    placeholder: "Qualités", class: 'aa-single-field'%>
                        <%= f.input :bio,
                                    required: true,
                                    autofocus: true,
                                    input_html: { autocomplete: "Bio" },
                                    placeholder: "Bio", class: 'aa-single-field'%>
                        <%= f.input :photo %>
                        <%= f.input :photo_cache, as: :hidden %>
                        <%= f.input :email,
                                    required: true,
                                    autofocus: true,
                                    input_html: { autocomplete: "email" }, class: 'aa-single-field'%>
                        <%= f.input :password,
                                    required: true,
                                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                    input_html: { autocomplete: "new-password" },
                                    placeholder: "Mot de passe", class: 'aa-single-field'%>
                        <%= f.input :password_confirmation,
                                    required: true,
                                    input_html: { autocomplete: "new-password" },
                                    placeholder: "Confirmer le mot de passe", class: 'aa-single-field' %>
                      </div>

                      <div class="form-actions contactform">
                        <%= f.button :submit, "Sign up", class: 'aa-search-btn aa-secondary-btn'%>
                      </div>
                    <% end %>

                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
  </div>
</section>
