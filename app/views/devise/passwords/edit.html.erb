<%= render "devise/shared/banner_form" %>
<section id="aa-signin">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="aa-signin-area">
          <div class="aa-signin-form">
            <div class="aa-signin-form-title">
              <div class="aa-signin-form-title">
                   <%= link_to 'HumanBnB', root_path, class: 'aa-property-home' %>
                    <h2>Change your password</h2>
              </div>

                  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                    <%= f.error_notification %>

                    <%= f.input :reset_password_token, as: :hidden, class: 'aa-single-field' %>
                    <%= f.full_error :reset_password_token %>

                    <div class="form-inputs contactform">
                      <%= f.input :password,
                                  label: "New password",
                                  required: true,
                                  autofocus: true,
                                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                  input_html: { autocomplete: "new-password" }, class: 'aa-single-field' %>
                      <%= f.input :password_confirmation, label: "Confirm your new password", required: true, class: 'aa-single-field' %>
                    </div>

                    <div class="form-actions contactform">
                      <%= f.button :submit, "Change my password", class: 'aa-search-btn aa-secondary-btn' %>
                    </div>
                  <% end %>

          <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

