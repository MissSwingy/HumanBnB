 <!-- Start menu section -->
<%= render '/shared/navbar'%>

<div class="banner-services" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url(<%= image_path "banner.jpg", alt: "alttext" %>);">
  <section id="aa-slider">
      <div class="aa-slider-area">
        <!-- Top slider -->
        <div class="aa-top-slider">
            <div class="aa-top-slider-single">
              <div class="aa-top-slider-content" style="text-align: center; position: initial;">
                <h1 class="aa-top-slider-title">Les Services</h1>
              </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End slider  -->
</div>

<div class="aa-title">
  <h2>Un professionnel au choix pour votre évènement</h2>
  <span></span>
  <p>Nos Humains sont disponibles pour vous aider à faire de votre évènement un moment inoubliable !</p>
</div>
<section id="aa-latest-property">
  <div class="aa-latest-properties-content">
        <div class="container">
          <div class="row">
            <% @services.each do |service| %>
              <div class="col-xs-12 col-sm-6 col-md-4">
                <article class="aa-properties-item">
                  <a href="#" class="aa-properties-item-img">
                    <%= cl_image_tag service.service_image, height: 300, width: 400, crop: :fill, alt: "Photo service"  %>
                  </a>
                  <div class="aa-tag for-sale">
                    <%= service.event_type %>
                  </div>
                  <div class="aa-properties-item-content">
                    <div class="aa-properties-info">
                      <i class="fas fa-map-marker-alt"></i>
                        <span><%= service.city %></span>
                    </div>
                    <div class="aa-properties-about">
                      <h3><a href="#"><%= service.title %></a></h3>
                      <p><%= service.details %></p>
                    </div>
                    <div class="aa-properties-detial">
                      <span class="aa-price">
                        <%= service.price %> € / Heure
                      </span>
                      <%= link_to "Voir en détails", service_path(service.id), class: "aa-secondary-btn" %>
                    </div>
                  </div>
                </article>
              </div>
            <% end %>
          </div>
      </div>
  </div>
</section>
<%= render '/shared/footer'%>
