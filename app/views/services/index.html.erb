<div class="aa-title">
  <h2>Un professionnel au choix pour votre évènement</h2>
  <span></span>
  <p>Nos Humains sont disponibles pour vous aider à faire de votre évènement un moment inoubliable !</p>
</div>
<section id="aa-latest-property">
  <div class="aa-latest-properties-content">
        <div class="container">
          <div class="row">
            <div class="col-md-4">
              <% @services.each do |service| %>
              <article class="aa-properties-item">
                <a href="#" class="aa-properties-item-img">
                  <%= image_tag "1.jpg", alt: "service pleureur professionnel" %>
                </a>
                <div class="aa-tag for-sale">
                  <%= service.event_type %>
                </div>
                <div class="aa-properties-item-content">
                  <div class="aa-properties-info">
                    <i class="fas fa-map-marker-alt"></i>
                      <span><%= service.city %></span>
                  </div>
                  <div class="aa-properties-about">
                    <h3><a href="#"><%= service.title %></a></h3>
                    <p><%= service.details %></p>
                  </div>
                  <div class="aa-properties-detial">
                    <span class="aa-price">
                      <%= service.price %> € / Heure
                    </span>
                    <a href="#" class="aa-secondary-btn">Réserver</a>
                  </div>
                </div>
              </article>
             <% end %>
            </div>
          </div>
      </div>
  </div>
</section>
