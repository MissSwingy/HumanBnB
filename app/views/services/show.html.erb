<div class="container">
  <div class="main-container">
     <div class="aa-properties-info">
      <img src="https://images.unsplash.com/photo-1494368308039-ed3393a402a4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=813&q=80" alt="avatar_user" class ="navbar-wagon avatar">
      <h2><%= @service.title %></h3>
      <h4> <%= @service.user.first_name%> <%= @service.user.last_name%> , <%= @service.user.age%> ans </h4>
      <p> <%= @service.city %></p>
      <p><%= @service.event_type %></p>
      <p>Details: <%= @service.details %></p>
    </div>
    <div class="tags">
      <button type="button" class="btn btn-outline-primary"></button>
       <ul>
        <li><%= @service.user.skills %></li>
       </ul>
    </div>
    <div class="bio-user">
      <p><%= @service.user.bio %></p>
    </div>
  </div>
  <aside class="aa-properties-sidebar">
    <div class="aa-properties-single-sidebar">
      <span class="aa-price"><%= @service.price %> €/heure</span>
      <p>Réservez ce service</p>
      <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Réservation", class: "btn btn-primary" %>
      <% end %>
    </div>
  </aside>
</div>
