<%= render '/shared/navbar'%>
<%= render '/shared/banner'%>

<div class="container">
  <div class="main-container">
     <div class="aa-properties-info">
      <img src="https://images.unsplash.com/photo-1494368308039-ed3393a402a4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=813&q=80" alt="avatar_user" class ="navbar-wagon avatar">
      <h2><%= @service.title %></h3>
      <h4> <%= @service.user.first_name%> <%= @service.user.last_name%> , <%= @service.user.age%> ans </h4>
      <p> <%= @service.city %></p>
      <p><%= @service.event_type %></p>
      <p>Details: <%= @service.details %></p>
    </div>
    <div class="tags">
      <button type="button" class="btn btn-outline-primary"></button>
       <ul>
        <li><%= @service.user.skills %></li>
       </ul>
    </div>
    <div class="bio-user">
      <p><%= @service.user.bio %></p>
    </div>
  </div>
  <aside class="aa-properties-sidebar">
    <div class="aa-properties-single-sidebar">
      <span class="aa-price"><%= @service.price %> €/heure</span>
      <p>Réservez ce service</p>

      <%= simple_form_for [@service, @booking], method: "post" do |f| %>
      <%= f.input :begin_date, as: :string, required: true, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>
      <div type="button" data-toggle= "modal" data-target= "#modal" class="aa-top-slider-btn aa-secondary-btn"> Réserver</div>
    </div>

    <div class="modal" id ="modal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Les détails du service</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p><%= @service.title %> </p>
            <p>Service proportionné par <%= @service.user.first_name%> <%= @service.user.last_name%> </p>
            <p><%= @service.price %> €/heure </p>
          </div>
          <div class="modal-footer">
            <button type="submit" class="aa-top-slider-btn aa-secondary-btn">Confirmer</button>
            <button type="button" class="aa-top-slider-btn aa-primary-btn" data-dismiss="modal">Annuler</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  </aside>
</div>

