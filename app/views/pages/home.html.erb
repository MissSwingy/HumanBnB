<div class="aa-price-range">
  <!-- Pre Loader -->
  <div id="aa-preloader-area">
    <div class="pulse"></div>
  </div>
    <!-- Start menu section -->
  <section id="aa-menu-area">
    <nav class="navbar navbar-default main-navbar" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <!-- FOR MOBILE VIEW COLLAPSED BUTTON -->
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!-- LOGO -->
          <!-- Text based logo -->
          <a class="navbar-brand aa-logo"><i class="fab fa-accessible-icon"></i> Human<span>BnB</span></a> <!-- Modifier le lien root_path -->
           <!-- Image based logo -->
           <!-- <a class="navbar-brand aa-logo-img" href="index.html"><img src="img/logo.png" alt="logo"></a> -->
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul id="top-menu" class="nav navbar-nav navbar-right aa-main-nav">
           <li class="active"><%= link_to "Accueil", root_path %></li>
            <li>
            <% if user_signed_in?%>
              <li><%= link_to "Proposer ses services", new_service_path %></li>
              <li><%= link_to "Nos services", services_path %></li>
              <li><%= link_to "Mon compte", dashboard_path(current_user) %></li>
              <li><%= link_to "Me déconnecter", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Proposer ses services", new_user_session_path %></li>
              <li><%= link_to "Nos services", services_path %></li>
              <li><%= link_to "S'inscrire", new_user_registration_path %></li>
              <li><%= link_to "Se connecter", new_user_session_path %></li>
            <% end %>
             </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
  </section>
  <!-- End menu section -->

  <!-- Start slider  -->
<section id="aa-slider">
    <div class="aa-slider-area">
      <!-- Top slider -->
      <div class="aa-top-slider">
        <!-- Top slider single slide -->
        <div class="aa-top-slider-single">
            <%= image_tag "banner.jpg", alt: "banner" %>
            <!-- Top slider content -->
            <div class="aa-top-slider-content" style="text-align: center;">
              <h1 class="aa-top-slider-title">Louez nos humains au meilleur prix !</h1>
              <%=link_to "Découvrir leurs services >>", services_path, class: "aa-top-slider-btn aa-secondary-btn"  %>
            </div>
            <!-- / Top slider content -->
        </div>
      </div>
    </div>
  </section>
  <!-- End slider  -->


  <!-- Advance Search -->
  <section id="aa-advance-search">
    <div class="container">
      <div class="aa-advance-search-area">
         <div class="aa-advance-search-top">
            <div class="row">
              <div class="col-md-4">
                <div class="aa-single-advance-search">
                  <%= form_tag services_path, method: :get do %>
                    <%= text_field_tag :query,
                      params[:query],
                      class: "form-control",
                      placeholder: "Trouver une prestation"
                    %>
                  <% end %>
                </div>
              </div>
              <div class="col-md-2">
                 <div class="aa-single-advance-search">
                  <select>
                    <option value="0" selected>Type d'évènement</option>
                    <option value="1">Mariage</option>
                    <option value="2">Funérailles</option>
                    <option value="3">Anniversaires</option>
                    <option value="4">Sorties Shopping</option>
                    <option value="5">Parcs d'attraction</option>
                    <option value="6">Evènements sportifs</option>
                  </select>
                </div>
              </div>
              <div class="col-md-2">
                    <%= simple_form_for :book, method: "get" do |f| %>
                 <div class="aa-single-advance-search">
                    <%= f.input :date_de_début, as: :string, label: false, placeholder: 'Date de début*',required: true, input_html: {class: "datepicker search-input"} %>
                    <% end %>
                </div>
              </div>
              <div class="col-md-2">
                 <div class="aa-single-advance-search">
                    <%= simple_form_for :book, method: "get" do |f| %>
                    <%= f.input :date_de_fin, as: :string, label: false, placeholder: 'Date de fin*', required: true, input_html: {class: "datepicker search-input"} %>
                  <% end %>
                </div>
              </div>
              <div class="col-md-2">
                  <%= simple_form_for :book, method: "get" do |f| %>
                <div class="aa-single-advance-search">
                  <%= f.button :submit, 'Rechercher',  class: 'aa-search-btn' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- / Advance Search -->

  <!-- Relevant services -->
